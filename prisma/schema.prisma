// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
id Int @id @default(autoincrement())
email String @unique
name String
roleId Int
role roles @relation(fields: [roleId], references: [id])
}

model roles {
  id Int @id @default(autoincrement())
  role String
  user users[]
}

model books {
  id Int @id @default(autoincrement())
  name String
  description String
  image_url String
}

model authors {
  id Int @id @default(autoincrement())
  name String @unique
}

model chtecs {
  id Int @id @default(autoincrement())
  name String @unique
}